{{!-- have two columns with bootstrap, one for menu, other for feed --}}
<div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-12 menu">
            <ul>
                <li>
                    {{!-- Whether or not a user is logged in, they will always see the global posts menu option --}}
                    <a href="#" class="link-button menu-button mt-1"><i class="fas fa-solid fa-globe mr-2"></i>Global Channel</a>
                </li>
                {{#if loggedIn}}
                    {{!-- If the user is logged in, they will see their list of friends and the private channels to which they belong --}}
                    <li>
                        <a href="#" class="link-button menu-button mt-1"><i class="fas fa-solid fa-user-group mr-1"></i>Friends</a>
                    </li>
                    <li>
                        <a href="#" class="link-button menu-button mt-1"><i class="fas fa-solid fa-lock mr-2"></i>Private Channels</a>
                    </li>
                {{/if}}
            </ul>
        </div>

        {{!-- Global feed --}}
        <div class="col-md-9 col-sm-12">
            {{#each posts as |post|}}
            {{> post-info post }}
            {{/each}}
        </div>

        
    </div>
</div>

<script src="/javascript/love.js"></script>