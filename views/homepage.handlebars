{{!-- have two columns with bootstrap, one for menu, other for feed --}}
<div class="container">
    <div class="row">
        <div class="col-md-9 col-sm-12">
            <div class="sort-by-box"> 
                <h5>Sort By: </h5>
                <ul>
                    <a class="sort-by-btn" href="/oldest"><li>Oldest</li></a>
                    <a class="sort-by-btn" href="/newest"><li></li>Newest</a>
                    <a class="sort-by-btn" href="/most-popular"><li>Most Popular</li></a>
                </ul>
            </div>

            {{#each posts as |post|}}
            {{> post-info post }}
            {{/each}}
        </div>
    </div>
</div>

<script src="/javascript/love.js"></script>
{{#if loggedIn}}
<script src="/javascript/menu.js"></script>
{{/if}}