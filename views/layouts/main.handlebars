          {{else}}
          <a class="link-button" href="/login"> <i class="fas fa-sign-in-alt"></i> login</a>
          {{/if}}
        </div>
      </nav>
    </header>

<div class="stars">
<div class="twinkling">
<div class="clouds">
    <main>
      {{{ body }}}
    </main>
</div>
</div>
</div>

    
    <footer>
      Thanks for visiting!
