<body>
  <div class="wrapper">
    <header>
      <div class="separate-items">
        <h1 class="home"> <a id="home-button" href="/"> <i class="fab fa-free-code-camp"></i> Campfire</a> </h1>
        {{#if loggedIn}}
        <p class="greeting">Welcome, {{username}}!</p>
        {{/if}}
      </div>
      
      <nav>
        <div class="nav-section">
          <a class="link-button" href="/"> <i class="fas fa-home"></i> Home</a>
          {{#if loggedIn}}
          <a class="link-button" href="/dashboard"> <i class="fas fa-user-alt"></i>Dashboard</a>
          {{/if}}
        </div>

        <div class="nav-section">
          {{#if loggedIn}}
          {{!-- <a id="logout"  href="/logout" class="link-button">logout <i class="fas fa-sign-out-alt"></i> </a> --}}
